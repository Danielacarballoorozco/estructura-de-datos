#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;
void main()
{int n,r,i;
i=0;
cout<< "ingrese el numero"<<endl;
cin>>n;
while(n>0)
{r=n%10;
n=n/10;
i=i+r;
}
cout<<"la suma de los digitos es :"<<i<<endl;
getch();

}

