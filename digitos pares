#include <iostream>
using namespace std;
void main()
{int n,r,in,i;
i=0;
in=0;
cout<< "ingrese el numero"<<endl;
cin>>n;
while(n>0)
{ r=n%10;
  n=n/10;
  if(r%2==0)
{i++;
}
}
cout<<"el numero digitos pares es :"<<i<<endl;
